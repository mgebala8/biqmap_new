doctype html
html(lang='pl')
  head
    title BIQmap
    script(src='js/library.js')

    script.
      //var basic_url = 'http://php.local/biqmap/public';
      //var csrf_token = 'EsjWQdIvOn1iz3jfnZN8XTPCoUQ9GbcmjMuVdPgN';

    link(rel='stylesheet', href='css/project.css')
  
    link(rel='stylesheet', media='screen', type='text/css', href='colorpicker/css/colorpicker.css')
    script(type='text/javascript', src='colorpicker/js/colorpicker.js')
    script(src='//cdn.tinymce.com/4/tinymce.min.js')
    link(rel='stylesheet', href='css/admin.css')
    head
  body
    section#toolbar_top
      span.logo
        |biqmap 

      button.save
        |zapisz

      button.delete
        |usuń

      button.publish
        |publikuj
        textarea.embed
          | <iframe width="100%" height="400px" border="0" frameborder="0" border="0" allowtransparency="true" vspace="0" hspace="0" src="http://biqmap.com/embed/6ff3cf4"></iframe>

      select.select_map
        option(id='new_map')
          |nowa mapa

      select.select_project
        option(id='new_project')
          |nowy projekt

      span.menu_right
        span.login= login
        a(href='/maps') mapa
        a(href='/projects').active projekt
        a(href='/logout') wyloguj się
      
    #layers
      label
        | tytuł zakładki: 
      input.label_layer 
      div.info
        input#width_canvas(type='text')
        |  : 
        input#height_canvas(type='text')
      div.chapter


    #canvas_box
      #canvas_cloud
      #canvas_wrapper
        canvas#main_canvas(nameclick='canvas', width='700px', height='400px')
        #image_resize(nameclick='image_resize')
      #right_resize(nameclick='right_resize')
      #bottom_resize(nameclick='bottom_resize')
    
    #palets_box.box
      h2 palety | dymki
      ul  
        li.active(category="palets") palety
        li(category="cloud") dymki
        li(category="area") obszary
  
      #palets
        #select
        #all
      #cloud
        label
          |dymek:
        textarea(name="cloud").cloud_text.tinyedit
        label
          |źródło:
        textarea(obj="layers",name="source").input_base_text.source.tinyedit
      #area
        span="lista kategorii:"
        div

    #excel_box.box
      
      h2 dane
      input(type="file")
      button 
        | wczytaj plik excel
      span 
        |kolumna obszarów: 
      select.category
      span 
        |<br />kolumna wartości: 
      select.value
      
      #excel_wrapper
        table.table 

    #pointer_box.box
      h2 punkty | legendy
      ul
        li.active(category="pointers") punkty
        li(category="legends") legendy
      #pointers
        label Nazwa projektu:
        input(obj="crud",name="project.name",value="nowy projekt").input_base_text.project_name
        label pokaż punkty tła:
        .switch.switch-on(obj='pointers', name='show_all_point')
          div
        label pokaż granice:
        .switch(obj='pointers', name='show_border',style="display:inline-block;")
          div
        div.color_border
        label odstęp poziomy:
        input.input_base(type='text', value='1', obj='pointers', name='padding_x')
        button.increment(obj='pointers', nameinput='padding_x') +
        button.decrement(obj='pointers', nameinput='padding_x') -
        label odstęp pionowy:
        input.input_base(type='text', value='1', obj='pointers', name='padding_y')
        button.increment(obj='pointers', nameinput='padding_y') +
        button.decrement(obj='pointers', nameinput='padding_y') -
        label przesuń co drugi wiersz:
        .switch.switch-off(obj='pointers', name='translate_modulo')
          div
        label wielkość:
        input.input_base(type='text', value='10', obj='pointers', name='size')
        button.increment(obj='pointers', nameinput='size') +
        button.decrement(obj='pointers', nameinput='size') -
        label kształt:
        select.select_base(name='main_kind', obj='pointers')
          option(name='square') kwadrat
          option(name='circle') koło
          option(name='hexagon') plaster miodu I
          option(name='hexagon2') plaster miodu II
      #legends
    #iframe
    script(src='js/project.js')
